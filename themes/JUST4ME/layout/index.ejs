        </article>


    </div>

    <!-- Footer -->
    <footer id="footer">
        <p class="copyright">Â© 2017-2020 hiramgao <br>Powered by <a href="https://hexo.io/" rel="external nofollow">Hexo.</a> <br>Theme by <a href="https://github.com/HiramGao/hexo-theme-QAQ" rel="external nofollow">hiramgao</a></p>
    </footer>

</div>

<!-- BG -->
<div id="bg"></div>

<!-- Scripts -->
<%- js('js/jquery.min.js')%>
<%- js('js/browser.min.js')%>
<%- js('js/breakpoints.min.js')%>
<%- js('js/util.js')%>
<%- js('js/main.js')%>
</body>
</html>
