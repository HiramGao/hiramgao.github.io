@import "./_pagination"
@import "./_utils"
.posts
  .post-item-wrapper
    background-color #fff
    material-box-shadow()
    a
      color #696969
      &:hover
        color #505050
    h3
      border-left 1px solid #5a5a5a
      text-indent 0.5em
      &:hover
        text-decoration underline
    .post-description-time
      color #999
      font-size 12px
    .tag-item
      font-size 13px
      color #fff
      line-height 18px
      color #9e9e9e
      &:before
        content:'#'
      &:after
        content:','
    .btn
      font-family:'Open Sans',sans-serif;
      cursor:pointer;
      transition:all 0.3s
      padding: .55em 1.3em .35em;
      font-size 12px;
      background: none;
      border-width: 2.7px;
      border-style: solid;
      border-color: #a0a0a0;
      border-radius: 4px;
      color: #787878;
      transition: width 1s ease;
      &:hover
        background-color #a0a0a0
        color #fff

@media (max-width: 64em)
  .posts
    .post-item-wrapper
      h3
        >a
          overflow hidden
          display block
          white-space nowrap
          text-overflow ellipsis
      .btn
        float none
        margin-top 0.5rem
