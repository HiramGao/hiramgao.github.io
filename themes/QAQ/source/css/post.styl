@import "./_utils"
@import "./_markdown"
.post
  background-color #fff
  .catalog
    border-bottom 1px solid #f5f5f5
    .catalog-title
      font-size 1.167rem
      color: #000
    .catalog-list
      padding-inline-start: .5rem
      position relative
      ol
        padding-inline-start 1rem
      &:before
        content ""
        position absolute
        top 0
        left 7px
        bottom 0
        width 2px
        background-color #ebedef
        opacity .5
      li
        list-style none
        font-size 1rem
        font-weight 400
        line-height 1.3
        color #000
        &.catalog-list-level-1
          font-weight 600
          margin-bottom 0.3rem
        &.catalog-list-level-2
          font-size 0.95rem
        &>a
          color inherit
          text-decoration none
          line-height 1.5
          display block
          border-bottom 1px solid transparent
          &:hover
            background-color rgba(33,150,243,0.1)
            border-bottom-color #2196f3
            .catalog-list-text:before
              color #2196f3
          .catalog-list-text
            position relative
            padding-left .7rem
            margin-left -2px
            &:before
              content ""
              position absolute
              top 50%
              left 0
              margin-top: -2px
              width 4px
              height 4px
              background-color currentColor
              border-radius 50%

  .post-header
    border-bottom 1px solid #f5f5f5
    h1
      line-height 1.41
    .time
      color #aaa
