.sidebar
  background-color #fff
  position relative
  box-shadow 0 1.5px 4px rgba(0, 0, 0, 0.24), 0 1.5px 6px rgba(0, 0, 0, 0.12)
  -webkit-transition box-shadow 1s ease
  -o-transition box-shadow 1s ease
  transition box-shadow 1s ease
  overflow hidden
  transition all 0.3s
  &:hover
    box-shadow 0 15px 24px rgba(0, 0, 0, 0.22), 0 19px 76px rgba(0, 0, 0, 0.3)
  .close-sidebar
    cursor pointer
    position absolute
    border 0
    right 0
    background 0 0
    font-size 21px
    font-weight 700
    line-height 1
    color #000
    text-shadow 0 1px 0 #fff
    opacity .5
    outline none
  .author-image
    width 128px
    height 128px
    border-color #eee
    -webkit-transition all .3s ease
    -o-transition all .3s ease
    transition all .3s ease
    &:hover
      transform translateY(-5px)
      box-shadow 0 0 8px rgba(0, 0, 0, 0.6) inset
  .author-name
    color #222
    font-weight 600
    position relative
    &:hover
      &:before
        -webkit-transform: translateY(-10px);
        transform: translateY(-10px);
        opacity 1
    &:before
        opacity 0
        pointer-events: none;
        position: absolute;
        z-index: 4;
        content: '';
        border-style: solid;
        -webkit-transition-duration: 0.3s;
        transition-duration: 0.3s;
        -webkit-transition-property: transform opacity;
        transition-property: transform opacity;
        left: calc(50% - 10px);
        top: 0;
        border-width: 0 10px 10px 10px;
        border-color: transparent transparent #e34603 transparent;

  .description
    color #999
    font-size 12px
  .site-info
    letter-spacing -0.31em
    .site-info-item
      letter-spacing normal
      word-spacing normal
      &:first-child
        border-right 1px solid #eee
    .site-info-name
      font-size 14px
      text-transform uppercase
    .site-info-count
      font-size 20px
    a
      color #565a5f
  .feed-link
    a
      font-size 20px
      color #e34603
      width 90%
      line-height 150%
      border-top 1px dotted #ccc
      border-bottom 1px dotted #ccc
    img
      height 15px

@media (max-width: 64em)
  .sidebar
    margin-top 0
    padding-top 0.5rem
    padding-bottom 0.5rem
    .author-image
      margin 0
      display inline-block
      width 64px
      height 64px
      vertical-align middle
    .author-name
      display inline-block
    .description
      display inline-block
    .site-info
      margin-top 0.5rem
    .feed-link
      display none