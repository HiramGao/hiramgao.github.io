@import "../_dep/normalize.min.css"

html
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

body
  background-color #f5f7f9
  font-family 'Microsoft YaHei', sans-serif

#background-canvas
  position fixed
  z-index -1

#egg
  position fixed
  z-index 2
  display none
  width 100%
  height 100%
  bottom 0


.progress-indicator
  position fixed
  top 0
  left 0
  height 3px
  background #2196f3
  background: linear-gradient(to right, rgba(33, 150, 243, 0.1), #2196f3);
  z-index 2

